doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Link to the main CSS file
    link(rel="stylesheet" href="/stylesheets/main.css")
  body
    .container
      // Left side with a full-height background and centered logo
      .left-side
        .logo-container
          img.logo(src="/images/Peerly-Logo.png" alt="Peerly Logo")
      // Right side with the sign-up card
      .right-side
        .signup-card
          h1 Peerly
          h2 Welcome!
          p.lead Sign up now to join our community.
          // Button that redirects to /api/login for existing users
          a.button(href="/api/login") Login
          // OR separator with lines
          p.or OR
          // Button that redirects to /api/register for new users
          a.button(href="/api/register") Create Account
          
          p.already
            | Already have an account? 
            a(href="/api/login") Sign in
